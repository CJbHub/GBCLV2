<Page x:Class="GBCLV2.Pages.DownloadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Style="{StaticResource Page_Style}"
      Title="DownloadPage">

    <Grid>

        <TabControl Height="310" VerticalAlignment="Bottom" Margin="1" BorderThickness="0" Background="Transparent" TabStripPlacement="Bottom">
            <TabItem Header="/images/bomb.png" Tag="启动设置">

            </TabItem>
            <TabItem Header="/images/resourcepack.png" Tag="资源包">
                
            </TabItem>

            <TabItem Header="/images/delete.png" Tag="日了假狗">
                <ListView FontSize="24" Background="#3FABABAB">
                </ListView>
            </TabItem>

            <TabItem Header="/images/about.png" Tag="关于">
                
            </TabItem>
        </TabControl>

        <Button Style="{StaticResource Button_Style}" Click="Go_Back" ToolTip="返回"
                Width="28" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="0" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="/images/back.png"/>
            </Button.Background>
        </Button>
       
    </Grid>
</Page>
